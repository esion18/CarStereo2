<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.crawforl20.carstereo.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="307dp"
            android:background="#000000"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.00"
                android:orientation="vertical"
                android:weightSum="1">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="25dp" />

                <Button
                    android:id="@+id/AM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onAMClick"
                    android:text="AM" />

                <Button
                    android:id="@+id/FM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onFMClick"
                    android:text="FM" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

                <ToggleButton
                    android:id="@+id/PowerButton"
                    android:layout_width="98dp"
                    android:layout_height="75dp"
                    android:layout_weight="0.11"
                    android:onClick="PowerOn"
                    android:text="ToggleButton" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.17"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65" />

                <TextView
                    android:id="@+id/Tuner_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.27"
                    android:text="Tuner"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:translationX="100dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/seek_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="OnSeekDownClick"
                        android:text="Seek Down" />

                    <Button
                        android:id="@+id/seek_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="OnSeekUpClick"
                        android:text="Seek Up" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.67" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.24"
                    android:text="Volume:"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:translationX="15dp"
                    android:translationY="15dp" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="#486087"
                    android:layout_weight="0.25" />
            </LinearLayout>

            <Space
                android:layout_width="55dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.08"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="235dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="562dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/amfm_indicator"
                                android:layout_width="147dp"
                                android:layout_height="112dp"
                                android:textColor="#ffffff"
                                android:textSize="50dp" />

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.13" />

                            <TextView
                                android:id="@+id/Current_Station"
                                android:layout_width="269dp"
                                android:layout_height="wrap_content"
                                android:text="Hello there"
                                android:textColor="#ffffff"
                                android:textSize="50dp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="0.25" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/Preset_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:longClickable="false"
                        android:onClick="OnPreset1Click"
                        android:text="1" />

                    <Button
                        android:id="@+id/Preset_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="OnPreset2Click"
                        android:text="2" />

                    <Button
                        android:id="@+id/Preset_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="OnPreset3Click"
                        android:text="3" />

                    <Button
                        android:id="@+id/Preset_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="OnPreset4Click"
                        android:text="4" />

                    <Button
                        android:id="@+id/Preset_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="OnPreset5Click"
                        android:text="5" />

                    <Button
                        android:id="@+id/Preset_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="OnPreset6Click"
                        android:text="6" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#18386d"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="309dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Space
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.06" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="0.74" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="956dp"
                        android:layout_height="167dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="618dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:translationX="200dp">

                            <Button
                                android:id="@+id/Stop"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Stop" />

                            <Button
                                android:id="@+id/Pause"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="I I" />

                            <Button
                                android:id="@+id/Eject"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Eject" />

                            <Button
                                android:id="@+id/Forward_track"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Skip" />

                            <Button
                                android:id="@+id/Repeat_track"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Repeat" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />

                        <LinearLayout
                            android:layout_width="1047dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:scaleX="5"
                            android:scaleY="5"
                            android:weightSum="1">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="match_parent"
                                android:layout_height="73dp"
                                android:scaleX="2"
                                app:srcCompat="@mipmap/disk_tray" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
